<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none" previewlistener="true">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Heavy Blogger</span>
          </a>
          
          <div class="nav-pills">
            <button type="button" class="btn btn-primary btnHandler" id="">Home</button>
            <button type="button" class="btn btn-primary btnHandler" id="read">Read blogs</button>
            <button type="button" class="btn btn-primary btnHandler" id="write">Write blogs</button> 
          </div>
        </header>
      </div> 
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> 
      <script>
        $(".btnHandler").on("click",function(){
            var id=$(this).attr("id");
            console.log(id);
            $.ajax({
            url: '/'+id, // Specify the path to your EJS file
            method: 'GET',
            success: function(response) {
                // Replace the content of the current page with the content of the loaded EJS file
                $('body').html(response);
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
            }
        });
        })
      </script>
</body>
</html>